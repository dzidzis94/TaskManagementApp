@model TaskManagementApp.Models.TemplateSection

@{
    ViewData["Title"] = "Create Section";
}

<h1>Create Section</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ProjectTemplateId" value="@ViewBag.ProjectTemplateId" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentSectionId" class="control-label"></label>
                <select asp-for="ParentSectionId" class="form-control" asp-items="@(new SelectList(ViewBag.ParentSections, "Id", "Title"))">
                    <option value="">-- No Parent --</option>
                </select>
                <span asp-validation-for="ParentSectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ProjectTemplates" asp-action="Edit" asp-route-id="@ViewBag.ProjectTemplateId">Back to Template</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
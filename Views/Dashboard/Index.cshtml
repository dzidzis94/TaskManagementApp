@model TaskManagementApp.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h1 class="text-white mb-4">@ViewData["Title"]</h1>

    <!-- User's Personal Stats -->
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-white-70 mb-3">My Progress</h4>
            <div class="card bg-dark-glass">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <h5 class="text-white">Completion Rate</h5>
                            <p class="display-4 text-white">@Model.CompletionPercentage.ToString("F1")%</p>
                            <p class="text-white-50">@Model.CompletedTasks of @Model.TotalTasks tasks completed</p>
                        </div>
                        <div class="col-md-8">
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @Model.CompletionPercentage.ToString("F1")%;" aria-valuenow="@Model.CompletionPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- My Outstanding Tasks -->
        <div class="col-lg-6 mb-4">
            <h4 class="text-white-70 mb-3">My Outstanding Tasks</h4>
            <div class="card bg-dark-glass">
                <div class="list-group list-group-flush">
                    @if (Model.MyTasks.Any())
                    {
                        @foreach (var task in Model.MyTasks)
                        {
                            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id" class="list-group-item list-group-item-action bg-transparent text-white d-flex justify-content-between align-items-center">
                                <span>@task.Title</span>
                                <span class="badge bg-primary rounded-pill">Due: @(task.DueDate?.ToString("MMM dd") ?? "N/A")</span>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="list-group-item bg-transparent text-white-50">You have no outstanding tasks. Great job!</div>
                    }
                </div>
            </div>
        </div>

        <!-- Global Activity Feed -->
        <div class="col-lg-6 mb-4">
            <h4 class="text-white-70 mb-3">Recent Activity</h4>
            <div class="card bg-dark-glass">
                 <div class="list-group list-group-flush">
                    @if (Model.RecentActivity.Any())
                    {
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <div class="list-group-item bg-transparent text-white-70 border-bottom border-secondary">
                                <i class="fas @(activity.ActivityType == "New Task" ? "fa-plus-circle text-success" : "fa-check-circle text-info") me-2"></i>
                                <strong>@activity.UserFullName</strong> @activity.Message
                                <div class="text-white-50 small mt-1">@activity.Timestamp.ToString("g")</div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="list-group-item bg-transparent text-white-50">No recent activity.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@model TaskManagementApp.Models.ProjectTemplate

@{
    ViewData["Title"] = "Project Template Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Project Template Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<hr />

<h3>Sections</h3>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var section in Model.Sections.Where(s => s.ParentSectionId == null))
        {
            @await Html.PartialAsync("_SectionRowReadOnly", section)
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@model IEnumerable<TaskManagementApp.Models.ProjectTemplate>

@{
    ViewData["Title"] = "Project Templates";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-3">Project Templates</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="list-group">
        @foreach (var item in Model) {
            <div class="task-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1" style="color: var(--primary-color);">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="mb-1" style="color: var(--text-color);">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Details</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this template?');">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

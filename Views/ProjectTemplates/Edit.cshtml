@model TaskManagementApp.Models.ProjectTemplate

@{
    ViewData["Title"] = "Edit Project Template";
}

<div class="container mt-4">
    <h1 class="mb-3">Edit Project Template</h1>
    <hr style="border-color: var(--border-color);" />

    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="task-item">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label" style="color: var(--text-color);"></label>
                            <input asp-for="Name" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label" style="color: var(--text-color);"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <hr style="border-color: var(--border-color);" />

    <h3 class="mb-3" style="color: var(--text-color);">Sections</h3>

    <p>
        <a asp-controller="TemplateSections" asp-action="Create" asp-route-projectTemplateId="@Model.Id" class="btn btn-primary">Add Section</a>
    </p>

    <div class="task-item p-0">
        <ul id="section-list" class="list-group list-group-flush">
            @foreach (var section in Model.Sections.Where(s => s.ParentSectionId == null).OrderBy(s => s.Order))
            {
                @await Html.PartialAsync("_SectionEditorRow", section)
            }
        </ul>
    </div>

    <div class="mt-3">
        <button id="save-structure" class="btn btn-success">Save Structure</button>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var el = document.getElementById('section-list');
            var sortable = new Sortable(el, {
                group: 'nested',
                animation: 150,
                fallbackOnBody: true,
                swapThreshold: 0.65,
                handle: '.fa-grip-vertical'
            });

            document.getElementById('save-structure').addEventListener('click', function () {
                var sections = [];
                document.querySelectorAll('#section-list > .list-group-item').forEach((item, index) => {
                    var sectionId = item.dataset.id;
                    sections.push({ id: sectionId, order: index, parentSectionId: null });
                    collectChildSections(item, sectionId, sections);
                });

                fetch(`/TemplateSections/UpdateStructure?projectTemplateId=@Model.Id`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': '@Html.AntiForgeryToken()'
                    },
                    body: JSON.stringify(sections)
                }).then(response => {
                    if (response.ok) {
                        // Use a simple alert or console log if showToast is not defined, or define it.
                        // Assuming showToast exists or we can mock it.
                        if (typeof showToast === 'function') {
                             showToast('Structure saved successfully!', 'success');
                        } else {
                             alert('Structure saved successfully!');
                        }
                    } else {
                        if (typeof showToast === 'function') {
                             showToast('Error saving structure.', 'error');
                        } else {
                             alert('Error saving structure.');
                        }
                    }
                });
            });

            function collectChildSections(parentItem, parentId, sections) {
                parentItem.querySelectorAll(':scope > .list-group > .list-group-item').forEach((item, index) => {
                    var sectionId = item.dataset.id;
                    sections.push({ id: sectionId, order: index, parentSectionId: parentId });
                    collectChildSections(item, sectionId, sections);
                });
            }

            document.getElementById('section-list').addEventListener('click', function (e) {
                if (e.target.classList.contains('btn-outline-danger')) {
                    var sectionItem = e.target.closest('.list-group-item');
                    var sectionId = sectionItem.dataset.id;

                    if (confirm('Are you sure you want to delete this section and all its children?')) {
                        fetch(`/TemplateSections/Delete/${sectionId}`, {
                            method: 'POST',
                            headers: {
                                'RequestVerificationToken': '@Html.AntiForgeryToken()'
                            }
                        }).then(response => {
                            if (response.ok) {
                                sectionItem.remove();
                                if (typeof showToast === 'function') showToast('Section deleted successfully!', 'success');
                            } else {
                                if (typeof showToast === 'function') showToast('Error deleting section.', 'error');
                            }
                        });
                    }
                }

                if (e.target.classList.contains('btn-outline-primary')) {
                    var sectionItem = e.target.closest('.list-group-item');
                    var sectionId = sectionItem.dataset.id;
                    var title = sectionItem.querySelector('input[type="text"]').value;
                    var description = sectionItem.querySelector('textarea').value;

                    var sectionData = {
                        id: sectionId,
                        title: title,
                        description: description,
                        projectTemplateId: @Model.Id
                    };

                    fetch(`/TemplateSections/Edit/${sectionId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(sectionData)
                    }).then(response => {
                        if (response.ok) {
                            if (typeof showToast === 'function') showToast('Section saved successfully!', 'success');
                        } else {
                            if (typeof showToast === 'function') showToast('Error saving section.', 'error');
                        }
                    });
                }
            });
        });
    </script>
}

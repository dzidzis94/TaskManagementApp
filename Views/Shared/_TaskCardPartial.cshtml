@model TaskManagementApp.ViewModels.TaskSummaryViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUserId = UserManager.GetUserId(User);
    var canComplete = Model.AssignedUserIds.Contains(currentUserId) && !Model.CompletedUserIds.Contains(currentUserId);
}

<div class="task-item @("task-priority-" + Model.Priority) mb-3" id="task-card-@Model.Id">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="card-title mb-0">
            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@Model.Id" style="color: var(--text-color); font-weight: 600; text-decoration: none;">
                @Model.Title
            </a>
        </h5>
        <div>
             <span class="status-badge @(Model.Status == TaskManagementApp.Models.TaskStatus.Completed ? "status-completed" : Model.Status == TaskManagementApp.Models.TaskStatus.InProgress ? "status-in-progress" : "status-pending")">
                @Model.Status
            </span>
        </div>
    </div>

    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text" style="color: var(--text-muted);">@Model.Description</p>
        }
    </div>

    <div class="d-flex justify-content-between align-items-center flex-wrap">
        <div class="small" style="color: var(--text-muted);">
            <div class="mb-1">
                <i class="fas fa-calendar-alt me-2"></i>
                <span>Due: @(Model.DueDate?.ToString("MMM dd, yyyy") ?? "No due date")</span>
            </div>
             <div class="mb-1">
                <i class="fas fa-user me-2"></i>
                <span>Assigned: @(Model.AssignedUserNames.Any() ? string.Join(", ", Model.AssignedUserNames) : "Unassigned")</span>
            </div>
        </div>

        <div class="task-actions mt-2 mt-sm-0">
            @if (canComplete)
            {
                <form asp-controller="Tasks" asp-action="MarkAsCompleted" asp-route-id="@Model.Id" method="post" class="d-inline me-1">
                    <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-check"></i> Complete</button>
                </form>
            }

            <form asp-controller="Tasks" asp-action="Clone" asp-route-id="@Model.Id" method="post" class="d-inline me-1" onsubmit="return confirm('Clone this task and all its subtasks?');">
                <button type="submit" class="btn btn-sm btn-info text-white" title="Clone Task"><i class="fas fa-copy"></i></button>
            </form>

            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary me-1"><i class="fas fa-eye"></i></a>

            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary me-1"><i class="fas fa-edit"></i></a>
                <a asp-controller="Tasks" asp-action="Create" asp-route-parentTaskId="@Model.Id" asp-route-projectId="@Model.ProjectId" class="btn btn-sm btn-success me-1"><i class="fas fa-plus"></i></a>
                <form asp-controller="Tasks" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                    <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                </form>
            }
        </div>
    </div>

    @if (Model.SubTasks != null && Model.SubTasks.Any())
    {
        <div class="sub-tasks">
             @await Html.PartialAsync("_TaskList", Model.SubTasks)
        </div>
    }
</div>

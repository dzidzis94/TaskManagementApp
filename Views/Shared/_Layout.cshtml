<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskMaster</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <a class="logo" href="@Url.Action("Index", "Tasks")">
            <i class="fas fa-tasks"></i>
            <h5>TaskMaster</h5>
        </a>

        <ul class="nav-links">
            <li>
                <a href="@Url.Action("Index", "Dashboard")" class="nav-link @(new[] {"Dashboard", "Home"}.Contains(ViewContext.RouteData.Values["controller"].ToString()) ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Tasks")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Tasks" ? "active" : "")">
                    <i class="fas fa-list-ul"></i>
                    <span>Tasks</span>
                </a>
            </li>
            @if (User.IsInRole("Admin"))
            {
            <li>
                <a href="@Url.Action("Index", "Projects")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Projects" ? "active" : "")">
                    <i class="fas fa-project-diagram"></i>
                    <span>Projects</span>
                </a>
            </li>
 <!-- Sagataves -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "ProjectTemplates")">
                    <i class="fas fa-clone"></i> Templates
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "UserManagement")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "UserManagement" ? "active" : "")">
                    <i class="fas fa-users-cog"></i>
                    <span>User Management</span>
                </a>
            </li>
            }
        </ul>

        <div class="user-info">
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            }
        </div>
    </div>

    <div class="main-content">
        <header class="top-bar">
            <div class="user-profile">
                @if (User.Identity.IsAuthenticated)
                {
                    <span>Welcome, @User.Identity.Name!</span>
                }
            </div>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="toast-container"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>

    <script>
        // Trigger toast notifications from TempData
        @if (TempData["SuccessMessage"] != null)
        {
            <text>showToast('@Html.Raw(TempData["SuccessMessage"])', 'success');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>showToast('@Html.Raw(TempData["ErrorMessage"])', 'error');</text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
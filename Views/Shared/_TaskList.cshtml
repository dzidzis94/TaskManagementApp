@model IEnumerable<TaskManagementApp.ViewModels.TaskSummaryViewModel>

<div class="task-list-container ps-4">
    @if (Model != null && Model.Any())
    {
        foreach (var task in Model)
        {
            if (task.ParentTaskId != null && Model.Any(x => x.Id == task.ParentTaskId))
            {
                continue;
            }
            @await Html.PartialAsync("_TaskCardPartial", task)
        }
    }
    else
    {
        @* This part will likely not be shown in the recursive view, but is good for the initial call *@
        <p class="text-white-50">No tasks to display.</p>
    }
</div>
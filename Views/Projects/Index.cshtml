@model IEnumerable<TaskManagementApp.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Project
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="DeleteMultiple" method="post" onsubmit="return confirm('Are you sure you want to delete all selected projects and their tasks?');">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input type="checkbox" id="select-all-checkbox" class="form-check-input" />
                <label class="form-check-label" for="select-all-checkbox" style="color: var(--text-color);">Select All</label>
            </div>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete Selected
            </button>
        </div>

        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="task-item">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start">
                        <div class="d-flex align-items-start mb-3 mb-md-0">
                            <input type="checkbox" name="projectIds" value="@item.Id" class="project-checkbox form-check-input me-3 mt-1" />
                            <div>
                                <h5 class="mb-1">
                                    <a asp-action="Details" asp-route-id="@item.Id" style="color: var(--primary-color); text-decoration: none; font-weight: 600;">@Html.DisplayFor(modelItem => item.Name)</a>
                                </h5>
                                <p class="mb-2" style="color: var(--text-color);">@Html.DisplayFor(modelItem => item.Description)</p>
                                <small style="color: var(--text-muted);">
                                    <i class="fas @(item.IsPublic ? "fa-globe" : "fa-lock") me-1"></i>
                                    @(item.IsPublic ? "Public" : "Private")
                                </small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2"><i class="fas fa-edit"></i> Edit</a>
                            <a asp-action="Clone" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2"><i class="fas fa-clone"></i> Clone</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-2"><i class="fas fa-eye"></i> View</a>
                            <button type="submit" formaction="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this project and all its tasks?');"><i class="fas fa-trash"></i> Delete</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('select-all-checkbox').addEventListener('click', function (event) {
            const checkboxes = document.querySelectorAll('.project-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = event.target.checked;
            });
        });
    </script>
}

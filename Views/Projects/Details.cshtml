@model TaskManagementApp.Models.Project
@using TaskManagementApp.ViewModels

@{
    ViewData["Title"] = "Project Details";
    // Šeit mēs paņemam tos smukos datus, ko sagatavoja Kontrolieris
    var projectTasks = ViewBag.ProjectTasks as IEnumerable<TaskSummaryViewModel>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="mb-2">@Model.Name</h1>
            <p style="color: var(--text-muted);">@Model.Description</p>
        </div>
        <div>
            <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Task
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Projects
            </a>
        </div>
    </div>
    <hr style="border-color: var(--border-color);" />

    <h3 class="mb-4" style="color: var(--text-color);">Tasks in this Project</h3>

    @* Šeit mēs pārbaudām jauno mainīgo 'projectTasks', nevis veco 'Model.Tasks' *@
    @if (projectTasks != null && projectTasks.Any())
    {
    <div id="task-list">
        @* Mēs padodam 'projectTasks' pa taisno. *@
        @* Nav vajadzīgs filtrēt 'Where', jo Serviss to jau izdarīja tavā vietā *@
        @await Html.PartialAsync("_TaskList", projectTasks)
    </div>
    }
    else
    {
    <div class="task-item mt-3">
        <div class="card-body text-center">
            <p style="color: var(--text-muted);">No tasks have been created for this project yet.</p>
        </div>
    </div>
    }
</div>

@section Scripts {
    <script>
        // Add any project-specific javascript here if needed in the future.
    </script>
}
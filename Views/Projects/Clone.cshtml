@model TaskManagementApp.ViewModels.CloneProjectViewModel

@{
    ViewData["Title"] = "Clone Project";
}

<style>
    .task-tree ul {
        list-style-type: none;
        padding-left: 20px;
    }
    .task-tree li {
        margin-top: 5px;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="task-item">
                <div class="card-header bg-transparent" style="border-bottom: 1px solid var(--border-color);">
                    <h2 class="mb-0" style="color: var(--primary-color);">Clone Project: @Model.SourceProjectName</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Clone" asp-route-id="@Model.SourceProjectId" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input type="hidden" asp-for="SourceProjectId" />
                        <input type="hidden" asp-for="SourceProjectName" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label" style="color: var(--text-color);">New Project Name</label>
                            <input asp-for="Name" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label" style="color: var(--text-color);">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <hr style="border-color: var(--border-color);" />

                        <h4 style="color: var(--primary-color);">Exclude Tasks</h4>
                        <p style="color: var(--text-muted);">Select tasks to exclude from the cloned project. Excluding a parent task will also exclude all of its subtasks.</p>

                        <div class="task-tree" style="color: var(--text-color);">
                            <ul>
                                @foreach (var task in Model.Tasks)
                                {
                                <partial name="_CloneTaskTree" model="task" />
                                }
                            </ul>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create Clone" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model TaskManagementApp.ViewModels.CloneProjectViewModel

@{
    ViewData["Title"] = "Clone Project";
}

<style>
    .task-tree ul {
        list-style-type: none;
        padding-left: 20px;
    }
    .task-tree li {
        margin-top: 5px;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card bg-dark-glass">
                <div class="card-header">
                    <h2 class="mb-0">Clone Project: @Model.SourceProjectName</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Clone" asp-route-id="@Model.SourceProjectId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="SourceProjectId" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">New Project Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <hr />

                        <h4>Exclude Tasks</h4>
                        <p class="text-white-50">Select tasks to exclude from the cloned project. Excluding a parent task will also exclude all of its subtasks.</p>

                        <div class="task-tree">
                            <ul>
                                @foreach (var task in Model.Tasks)
                                {
                                    <partial name="_CloneTaskTree" model="task" />
                                }
                            </ul>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create Clone" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

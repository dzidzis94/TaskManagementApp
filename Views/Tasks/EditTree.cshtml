@model TaskManagementApp.ViewModels.TaskTreeEditViewModel

@{
    ViewData["Title"] = "Edit Task Tree";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <div>
                <h3 class="mb-0 fs-5"><i class="fas fa-network-wired me-2"></i>Edit Structure: @Model.RootTaskTitle</h3>
                <small class="text-white-50">Review the cloned hierarchy. Mark items to delete.</small>
            </div>
            <span class="badge bg-light text-primary">@Model.Tasks.Count tasks</span>
        </div>

        <div class="card-body p-0">
            <form asp-action="EditTree" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="RootTaskId" />
                <input type="hidden" asp-for="RootTaskTitle" />

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted text-uppercase small font-weight-bold">
                            <tr>
                                <th style="width: 45%; padding-left: 1.5rem;">Task Title</th>
                                <th style="width: 40%">Description</th>
                                <th style="width: 15%" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Tasks.Count; i++)
                            {
                            @* Slēptie lauki datu saglabāšanai *@
                            <input type="hidden" asp-for="Tasks[i].Id" />
                            <input type="hidden" asp-for="Tasks[i].ParentTaskId" />
                            <input type="hidden" asp-for="Tasks[i].Depth" />

                            @* Rinda iekrāsojas sarkana, ja IsDeleted ir true *@
                            <tr class="transition-all @(Model.Tasks[i].IsDeleted ? "table-danger text-muted" : "")" id="row_@i">
                                <td class="py-3">
                                    @* Trepītes zīmēšana *@
                                    <div style="padding-left: @(Model.Tasks[i].Depth * 30)px; position: relative;">
                                        @if(Model.Tasks[i].Depth > 0)
                                            {
                                        <i class="fas fa-level-up-alt fa-rotate-90 text-muted me-2 opacity-50"></i>
                                            }
                                        <input asp-for="Tasks[i].Title" class="form-control form-control-sm d-inline-block shadow-none fw-bold"
                                               style="width: auto; min-width: 250px; border: 1px solid transparent; background: transparent;"
                                               onfocus="this.style.background='var(--bs-body-bg)'; this.style.borderColor='var(--bs-border-color)';"
                                               onblur="this.style.background='transparent'; this.style.borderColor='transparent';" />
                                    </div>
                                </td>
                                <td>
                                    <input asp-for="Tasks[i].Description" class="form-control form-control-sm border-0 bg-transparent shadow-none" placeholder="Description..." />
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        @* Checkbox, kas kontrolē IsDeleted *@
                                        <input class="form-check-input bg-danger border-danger" type="checkbox" asp-for="Tasks[i].IsDeleted"
                                               id="delete_@i"
                                               onchange="toggleDeleteRow(@i, this.checked)">
                                        <label class="form-check-label ms-2 text-danger small" for="delete_@i">Delete</label>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white p-3 d-flex justify-content-end gap-2 border-top">
                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="@Model.RootTaskId" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-check me-2"></i>Confirm & Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleDeleteRow(index, isChecked) {
            var row = document.getElementById('row_' + index);
            if (isChecked) {
                row.classList.add('table-danger', 'text-muted');
            } else {
                row.classList.remove('table-danger', 'text-muted');
            }
        }
    </script>
}
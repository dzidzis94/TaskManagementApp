@model TaskManagementApp.ViewModels.TaskTreeEditViewModel

@{
    ViewData["Title"] = "Edit Task Tree";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Task Tree: @Model.RootTaskTitle</h2>

    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i> You can edit titles and descriptions of the entire task tree below. Use the "Delete" button to remove unwanted sub-tasks.
    </div>

    <form asp-action="EditTree" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="RootTaskId" />
        <input type="hidden" asp-for="RootTaskTitle" />

        <div class="list-group mb-4">
            @for (int i = 0; i < Model.Tasks.Count; i++)
            {
                var item = Model.Tasks[i];
                <div class="list-group-item task-row" id="task-row-@i" style="margin-left: @(item.Depth * 20)px;">
                    <div class="row align-items-center">
                        <!-- Hidden inputs for binding -->
                        <input type="hidden" name="Tasks.Index" value="@i" />
                        <input type="hidden" name="Tasks[@i].Id" value="@item.Id" />
                        <input type="hidden" name="Tasks[@i].ParentTaskId" value="@item.ParentTaskId" />
                        <input type="hidden" name="Tasks[@i].Depth" value="@item.Depth" />

                        <div class="col-md-4">
                            <label class="form-label small text-muted">Title</label>
                            <input type="text" name="Tasks[@i].Title" value="@item.Title" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label small text-muted">Description</label>
                            <textarea name="Tasks[@i].Description" class="form-control" rows="1">@item.Description</textarea>
                        </div>

                        <div class="col-md-2 text-end">
                            @if (item.Id == Model.RootTaskId)
                            {
                                <span class="badge bg-primary">Root</span>
                            }
                            else
                            {
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeTask(@i)">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Details" asp-route-id="@Model.RootTaskId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i> Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function removeTask(index) {
            if (confirm('Are you sure you want to delete this task? It will be removed when you save.')) {
                var row = document.getElementById('task-row-' + index);
                if (row) {
                    row.remove();
                }
            }
        }
    </script>
}

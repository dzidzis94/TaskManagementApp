@model TaskManagementApp.Models.TaskItem

<div class="task-item">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="card-title mb-0" style="color: var(--primary-color);">@Model.Title</h5>
        <div>
            <span class="status-badge @GetStatusBadgeClass(Model.Status)">
                @Model.Status.GetDisplayName()
            </span>
            <span class="badge @GetPriorityBadgeClass(Model.Priority)">
                @Model.Priority.ToString()
            </span>
        </div>
    </div>

    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text" style="color: var(--text-color);">@Model.Description</p>
        }
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <div class="small" style="color: var(--text-muted);">
            <div class="mb-1">
                <i class="fas fa-user me-2"></i>
                <span>@(Model.TaskAssignments.FirstOrDefault()?.User?.FirstName ?? "Unassigned")</span>
            </div>
            <div>
                <i class="fas fa-calendar me-2"></i>
                <span>@(Model.DueDate?.ToString("MMM dd, yyyy") ?? "No due date")</span>
            </div>
        </div>
        <div>
            <a href="@Url.Action("Edit", "Tasks", new { id = Model.Id })" class="btn btn-sm btn-primary me-1"><i class="fas fa-edit"></i></a>
            <a href="@Url.Action("Details", "Tasks", new { id = Model.Id })" class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i></a>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(TaskManagementApp.Models.TaskStatus status)
    {
        return status switch
        {
            TaskManagementApp.Models.TaskStatus.Pending => "status-pending",
            TaskManagementApp.Models.TaskStatus.InProgress => "status-in-progress",
            TaskManagementApp.Models.TaskStatus.Completed => "status-completed",
            TaskManagementApp.Models.TaskStatus.Cancelled => "status-cancelled",
            _ => ""
        };
    }

    string GetPriorityBadgeClass(TaskManagementApp.Models.TaskPriority priority)
    {
        return priority switch
        {
            TaskManagementApp.Models.TaskPriority.High => "bg-danger",
            TaskManagementApp.Models.TaskPriority.Medium => "bg-warning text-dark",
            TaskManagementApp.Models.TaskPriority.Low => "bg-info text-dark",
            _ => "bg-secondary"
        };
    }
}

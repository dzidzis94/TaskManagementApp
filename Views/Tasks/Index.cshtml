@model IEnumerable<TaskManagementApp.ViewModels.TaskSummaryViewModel>

@{
    ViewData["Title"] = ViewBag.ProjectName ?? "Tasks";
    var projectId = ViewBag.ProjectId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-white">@ViewData["Title"]</h1>
            @if (projectId != null)
            {
                <a asp-controller="Projects" asp-action="Index" class="text-white-50"><i class="fas fa-arrow-left"></i> Back to All Projects</a>
            }
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" asp-route-projectId="@projectId" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Task
            </a>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">@TempData["InfoMessage"]</div>
    }

    <div id="task-list-container">
        @if (Model != null && Model.Any())
        {
            @await Html.PartialAsync("_TaskList", Model)
        }
        else
        {
            <div class="card bg-dark-glass">
                <div class="card-body text-center">
                    <p class="text-white-50">There are no tasks in this view. @(User.IsInRole("Admin") ? "Why not create one?" : "")</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .task-list-container .task-list-container {
            border-left: 2px solid rgba(255, 255, 255, 0.1);
            padding-left: 1.5rem;
        }
    </style>
}
@model IEnumerable<TaskManagementApp.Models.TaskItem>

    @{
    ViewData["Title"] = "Uzdevumi";
    }

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-tasks"></i> Uzdevumu saraksts</h1>

            @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Jauns uzdevums
            </a>
        }
        </div>

        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

        <div class="task-tree">
            @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Vēl nav izveidoti uzdevumi.
            </div>
        }
        else
        {
            foreach (var task in Model)
            {
            @await Html.PartialAsync("_TaskItem", task)
            }
        }
        </div>
    </div>

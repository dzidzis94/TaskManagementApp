@model IEnumerable<TaskManagementApp.Models.TaskItem>

@{
    ViewData["Title"] = "Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="gradient-text">My Tasks</h1>
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Create")" class="btn btn-primary" style="background: var(--primary-gradient); border: none;">
            <i class="fas fa-plus"></i> Create New Task
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have no tasks. Create one!
    </div>
}
else
{
    <div class="task-grid">
        @foreach (var task in Model)
        {
            @await Html.PartialAsync("_TaskItem", task)
        }
    </div>
}
@model TaskManagementApp.ViewModels.CreateTaskViewModel

@{
    ViewData["Title"] = "Create a New Task";
}

<h1 class="gradient-text">@ViewData["Title"]</h1>
<p class="text-muted mb-4">Fill out the details below to create a new task.</p>

<div class="form-container">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ParentTaskId" />

        <div class="mb-4">
            <label asp-for="Title" class="form-label fw-bold"></label>
            <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g., Design the new dashboard" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Add a more detailed description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <label asp-for="DueDate" class="form-label fw-bold"></label>
                <input asp-for="DueDate" type="date" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="AssignedUserId" class="form-label fw-bold">Assign To</label>
                <select asp-for="AssignedUserId" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "Id", "UserName"))">
                    <option value="">-- Select a user --</option>
                </select>
                <span asp-validation-for="AssignedUserId" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Create Task
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
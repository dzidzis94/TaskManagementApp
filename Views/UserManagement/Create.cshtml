@model TaskManagementApp.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Pievienot lietotāju";
}

<div class="container mt-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="task-item">
                <div class="card-header bg-transparent border-bottom" style="border-color: var(--border-color);">
                     <h5 class="mb-0" style="color: var(--primary-color);"><i class="fas fa-user-plus me-2"></i> @ViewData["Title"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="Email" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="FirstName" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="LastName" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="Password" type="password" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label" style="color: var(--text-color);"></label>
                            <select asp-for="Role" class="form-select" style="background-color: var(--background-color); color: var(--text-color); border-color: var(--border-color);">
                                <option value="">-- Izvēlieties lomu --</option>
                                <option value="Admin">Administrators</option>
                                <option value="User">Lietotājs</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Atpakaļ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Izveidot
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<TaskManagementApp.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="gradient-text">@ViewData["Title"]</h1>
    <a href="@Url.Action("Create", "UserManagement")" class="btn btn-primary" style="background: var(--primary-gradient); border: none;">
        <i class="fas fa-user-plus"></i> Add New User
    </a>
</div>

<table class="modern-table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="badge">@role</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "UserManagement", new { id = user.Id })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
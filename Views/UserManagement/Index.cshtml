@model IEnumerable<TaskManagementApp.ViewModels.UserViewModel>

    @{
    ViewData["Title"] = "Lietotāju pārvalde";
    }

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-users"></i> @ViewData["Title"]</h1>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Pievienot lietotāju
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Vārds</th>
                            <th>Uzvārds</th>
                            <th>E-pasts</th>
                            <th>Lomas</th>
                            <th>Darbības</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                <span class="badge bg-primary">@role</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Rediģēt
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@model IEnumerable<TaskManagementApp.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <a href="@Url.Action("Create", "UserManagement")" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>
    </div>

    <div class="list-group">
        @foreach (var user in Model)
        {
            <div class="task-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1" style="color: var(--primary-color);">@user.FirstName @user.LastName</h5>
                        <p class="mb-1" style="color: var(--text-color);">@user.Email</p>
                        <div>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        </div>
                    </div>
                    <div>
                        <a href="@Url.Action("Edit", "UserManagement", new { id = user.Id })" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
